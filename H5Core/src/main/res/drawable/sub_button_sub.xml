<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:drawable="@drawable/btn_bg_disable" android:state_enabled="false" />

    <!-- Pressed -->
    <item android:drawable="@drawable/btn_subsub_bg_press" android:state_enabled="true" android:state_pressed="true" />

    <!-- Focused states -->
    <item android:drawable="@drawable/btn_subsub_bg" android:state_enabled="true" android:state_focused="true" android:state_pressed="false" />

    <!-- Non focused states -->
    <item android:drawable="@drawable/btn_subsub_bg" android:state_enabled="true" android:state_focused="false" android:state_pressed="false" />

</selector>